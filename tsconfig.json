{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/api.js",
    "pages/works/schedule.jsx",
    "pages/index.jsx",
    "pages/works/index.jsx",
    "pages/works/[slug].jsx",
    "components/nav.jsx",
    "components/layout.jsx",
    "components/header.jsx",
    "components/contact.jsx",
    "components/container.jsx",
    "components/convert-body.jsx",
    "components/convert-date.jsx",
    "components/footer.jsx",
    "components/hero.jsx",
    "components/logo.jsx",
    "components/my-loader.jsx",
    "components/post-categories.jsx",
    "components/post-header.jsx",
    "components/postBody.jsx",
    "components/social.jsx",
    "components/twoColumn.jsx",
    "lib/extract-text.jsx",
    "components/meta.jsx",
    "lib/constants.js",
    "pages/api/hello.js",
    "pages/_app.jsx",
    "pages/_document.jsx",
    "pages/about.jsx"
  ],
  "exclude": ["node_modules"]
}
